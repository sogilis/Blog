// See example at https://github.com/salazarr-js/vuepress-ts
{
  "compilerOptions": {
    "lib": ["DOM", "ES2020"],
    "noImplicitAny": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": true,
    "target": "ES2018",
    "moduleResolution": "node"
  },
  "include": [
    "./docs/.vuepress/**/*.ts",
    "./docs/.vuepress/**/*.vue",
    "./theme/**/*.ts",
    "./theme/**/*.vue"
  ],
  "exclude": ["node_modules"]
}
