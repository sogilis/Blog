// See example at https://github.com/salazarr-js/vuepress-ts
// See also https://vuejs.org/v2/guide/typescript.html
{
  "compilerOptions": {
    "lib": ["DOM", "ES2020", "dom.iterable"],
    "noImplicitAny": false,
    "noImplicitThis": true,
    "sourceMap": true,
    "strict": true,
    "target": "ES2018",
    "module": "ES2020",
    "moduleResolution": "node"
  },
  "include": [
    "./blog/.vuepress/components/**/*.ts",
    "./blog/.vuepress/components/**/*.vue",
    "./theme/**/*.ts",
    "./theme/**/*.vue"
  ],
  "exclude": ["node_modules"]
}
