{
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "lib": ["DOM", "ES2020"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "newLine": "lf",
    "noEmit": false,
    "allowJs": false,
    "noEmitOnError": false,
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": true,
    "target": "ES2018"
  },
  "include": [
    "./docs/.vuepress/**/*",
    "./docs/.vuepress/**/*.js",
    "./docs/.vuepress/**/*.ts",
    "./docs/.vuepress/**/*.vue",
    "./theme/**/*",
    "./theme/**/*.js",
    "./theme/**/*.ts",
    "./theme/**/*.ts",
    "./theme/**/*.vue"
  ],
  "exclude": ["node_modules"]
}
