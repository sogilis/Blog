{
  "name": "sogilis-blog",
  "version": "1.0.0",
  "description": "Sogilis blog",
  "repository": "sogilis/Blog",
  "scripts": {
    "start": "make start",
    "start:netlify": "make start_netlify",
    "build": "make build",
    "build:preview": "make build_preview",
    "prettier:format": "prettier --write \"{,site/**/}*.{json,ts,css,scss,yml}\"",
    "prettier:check": "prettier --check \"{,site/**/}*.{json,ts,css,scss,yml}\"",
    "lint": "eslint . --ext .js,.ts",
    "lint:fix": "yarn lint -- --fix"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "eslint": "^7.0.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.3",
    "husky": "^4.2.5",
    "netlify-cms-proxy-server": "^1.2.6",
    "prettier": "^2.0.5"
  },
  "dependencies": {
    "bootstrap-reboot": "^4.4.1",
    "hugo-bin": "^0.58.0",
    "netlify-cms": "^2.10.48",
    "typeface-eb-garamond": "^1.1.4",
    "typeface-montserrat": "^0.0.75"
  },
  "hugo-bin": {
    "buildTags": "extended"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn prettier:format"
    }
  }
}
